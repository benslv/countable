generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Guild {
  id                  Int     @id @default(autoincrement())
  guildId             String  @unique
  channelId           String  @default("")
  modRoleId           String  @default("")
  count               Int     @default(0)
  highestCount        Int     @default(0)
  highestCountId      String  @default("")
  prevUserId          String  @default("")
  latestMessageId     String  @default("")
  reactOnEmptyMessage Boolean @default(false)
  reactionEmojiId     String  @default("")
  failRoleId          String  @default("")
  failUserId          String  @default("")
  correctCounts       Int     @default(0)
}

